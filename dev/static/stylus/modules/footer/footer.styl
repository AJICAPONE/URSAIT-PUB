footer
  flex 0 0 auto
  background-color #21263E
.footer-top-menu
  display flex
  align-items center
.footer-top
  display flex
  justify-content space-between
  align-items center
  padding 50px 0
  border-bottom 1px solid rgba(255,255,255,0.1)
.footer-top-menu--item
  font-family Ms500
  font-size 15px
  color #fff
.footer-top-logo
  .icon
    size(120px)
    fill #fff
.footer-top-phone
  margin-bottom 20px
  &:last-child
    margin-bottom 0
  .icon
    size(22px)
    fill #2F80ED
    margin-right 15px
  span
    color #fff
    font-family Ms600
    font-size 16px

.footer-top-attr
  display flex
  flex-direction column

.footer-top-menu--item
  margin-right 80px
  font-family Ms500
  font-size 15px
  color #fff
  &:last-child
    margin-right 0
.footer-middle--list__item
  display flex
  flex-direction column
  span
    color #fff
    font-family Cm700
    font-size 18px
    margin-bottom 15px
  a
    font-family Ms400
    font-size 13px
    color rgba(255,255,255,0.7)
.footer-middle
  padding 50px 0

.footer-subscribe
  display flex
  justify-content space-between
  align-items center
  background: rgba(255, 255, 255, 0.1);
  border-radius 15px
  padding 30px

.footer-subscribe--title
  color #fff !important
  font-size 25px !important
  margin-bottom 20px !important
.footer-middle--list
  margin-bottom 50px
.footer-subscribe-input
  width 440px
  background-color #414557
  border: 1.5px solid rgba(255, 255, 255, 0.1);
  height 60px
  padding 20px
  font-family Ms400
  font-size 13px
  color rgba(255, 255, 255, 0.7);
  border-radius 10px
.footer-subscribe-input__wrap
  position relative
  display flex
  align-items center

.footer-submit--sub
  position absolute
  right 15px
  background-color transparent
  border none

  .icon
    size(30px)
    fill #fff
.footer-bottom-lang-list
  display flex
  align-items center
  justify-content space-between
  padding 13px 15px
  height 40px
  width 100%
  min-width 146px
  max-width 160px
  border 1px solid rgba(255, 255, 255, 0.3);
  border-radius 5px
  cursor pointer
.footer-bottom-lang__text
  font-family Ms400
  font-size 14px
  color rgba(255, 255, 255, 0.6);

.footer-bottom-lang__img
  display flex
  justify-content center
  align-items center
  background-repeat no-repeat
  background-size contain
  size(22px,14px)
  margin-right 10px
.footer-bottom-lang--wrap
  display flex
  align-items center
.footer-bottom-lang-arrow
  .icon
    size(11px)
    fill rgba(255, 255, 255, 0.6);

.footer-bottom
  background-color #373B4F
  height 70px
  padding 15px 0
  .container
    display flex
    justify-content space-between
    align-items center
.footer-bottom-left
  span
    font-family Ms400
    font-size 14px
    color rgba(255, 255, 255, 0.7);
.footer-social--list
  display flex
  align-items center
.footer-social--item
  display flex
  align-items center
  justify-content center
  size(40px)
  background-color #fff
  border-radius 12px
  margin-right 30px
  transition all linear .2s
  &:last-child
    margin-right 0
  .icon
    size(20px)
    fill #2F80ED
  &:hover
    background-color #2F80ED
    box-shadow: 0px 0px 20px rgba(253, 191, 90, 0.2);
    .icon
      fill #fff
.footer-bottom-right
  display flex
  align-items center
.footer-bottom-lang-list
  margin-right 30px
  position relative


.footer-bottom-lang-choise
  position absolute
  background-color #373B4E
  bottom 50px
  width 100%
  right 0
  left 0
  border: 1px solid rgba(255,255,255,0.3);
  padding 10px 15px
  display none
.footer-bottom-choise__item
  font-family Ms400
  font-size 13px
  color #fff
  margin-bottom 10px
  transition all linear .2s
  &:last-child
    margin-bottom 0
  &:hover
    color #2F80ED




