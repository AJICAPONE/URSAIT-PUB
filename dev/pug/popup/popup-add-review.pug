#popup-add-review.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
    .modal-dialog.modal-dialog-centered.popup-w-770(role='document')
        form.modal-content
            .popup-header
                .popup-close--icon.close(data-dismiss="modal" aria-label="Close")
                    +icon('close')
                .form-title Оставить отзыв
                    span
            .popup-middle
                .popup-input-wrap.m-40px
                    .popup-select--wrap
                        .popup-select--input Ваша профессия
                        +icon('arrow-down')
                        .popup-select--list
                            .popup-select--item Ваша профессия1
                            .popup-select--item Ваша профессия2
                    textarea.textarea-forms.mb-30(cols="5" rows="4" placeholder="Поделитесь вашим мнением о нашем сервисе...")

                button.main-button-color.mw-200.m-0-auto(type="submit") Отправить
                    +arrow('arrow-button')
